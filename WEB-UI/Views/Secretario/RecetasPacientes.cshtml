@{
    Layout = null;
    ViewData["Title"] = "Recetas Paciente";
}





<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!--UNICO CSS PARA PAGINAS CREADAS POR CHRISTIAN -->

    <link href="~/css/severalstyles.css" rel="stylesheet" />

</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Secretario" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>



    @Html.Partial("MenuLateralSecretario")


    <div class="col text-left" >
        <div class="container">
            <h2 class="text-center">Lista de Recetas</h2>
            <a asp-controller="Secretario" asp-action="CrearRecetas"><button class="btn border mb-1">Crear Receta</button> </a>
            <div class="card">
                <div class="card-body">
                    <button class="btn btn-success float-right mb-2">Editar</button>
                    <h5 class="card-title">Nombre del Paciente: Juan Pérez</h5>
                    <p class="card-text"><strong>Identificación del Paciente:</strong> 123456789</p>
                    <p class="card-text"><strong>Nombre del Médico:</strong> María González</p>
                    <p class="card-text"><strong>Clínica:</strong> Clínica San José</p>
                    <p class="card-text"><strong>Fecha de Emisión:</strong> 2024-04-05</p>
                    <p class="card-text"><strong>Medicamentos:</strong> Ibuprofeno, Paracetamol</p>
                    <p class="card-text"><strong>Dosis Recomendada:</strong> 500mg</p>
                    <p class="card-text"><strong>Cantidad de Días:</strong> 7</p>
                    <p class="card-text"><strong>Recomendaciones:</strong> Tomar con alimentos</p>
                    <p class="card-text"><strong>Foto:</strong> <img src="ruta/de/la/imagen.jpg" alt="Imagen de la receta" style="max-width: 100%;"></p>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <button class="btn btn-success">Descargar Receta</button>
                </div>
            </div>
            <div class="card mt-4">
                <div class="card-body">
                    <button class="btn btn-success float-right mb-2">Editar</button>
                    <h5 class="card-title">Nombre del Paciente: María Rodríguez</h5>
                    <p class="card-text"><strong>Identificación del Paciente:</strong> 987654321</p>
                    <p class="card-text"><strong>Nombre del Médico:</strong> Carlos López</p>
                    <p class="card-text"><strong>Clínica:</strong> Hospital Central</p>
                    <p class="card-text"><strong>Fecha de Emisión:</strong> 2024-04-06</p>
                    <p class="card-text"><strong>Medicamentos:</strong> Amoxicilina, Omeprazol</p>
                    <p class="card-text"><strong>Dosis Recomendada:</strong> 250mg</p>
                    <p class="card-text"><strong>Cantidad de Días:</strong> 10</p>
                    <p class="card-text"><strong>Recomendaciones:</strong> Tomar con abundante agua</p>
                    <p class="card-text"><strong>Foto:</strong> <img src="ruta/de/la/imagen.jpg" alt="Imagen de la receta" style="max-width: 100%;"></p>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <button class="btn btn-success">Descargar Receta</button>
                </div>
            </div>
        </div>

    </div>

    @Html.Partial("_Footer")






    <script src="~/js/usermenu/menufunctions.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

