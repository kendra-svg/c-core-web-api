
@{
    Layout = null;
    ViewData["Title"] = "Facturacion";
}





<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link href="~/css/severalstyles.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!--UNICO CSS PARA PAGINAS CREADAS POR CHRISTIAN -->
    <link rel="stylesheet" type="text/css" href="~/css/facturacion.css">

    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />
</head>

<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>


    <!--
    <div class="barra-busqueda">
        <div class="input-group">
          <div class="form-outline" data-mdb-input-init>
            <input id="search-focus" type="search" id="form1" class="form-control" />
            <label class="form-label" for="form1">Search</label>
          </div>
          <button type="button" class="btn btn-primary" data-mdb-ripple-init>
            <i class="fas fa-search"></i>
          </button>
        </div>
    </div>-->
    <div class="container-fluid">
        <div class="row">
            <!-- Barra lateral -->
            <div class="col-md-3">
                @Html.Partial("MenuLateralSecretario")
            </div>
            <!-- Contenido de la página -->
            <div class="col-md-9">
                <div class="col text-left">
                    <div class="position-relative ">
                        <div class="container">
                            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                                <li><a asp-controller="Secretario" asp-action="DatosPersonales">Mi perfil</a></li>
                                <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="container">
                        <h2>Facturación</h2>
                        <h3>Información</h3>
                        <form action="/Facturacion/GenerarFactura" method="post">
                            <div class="form-group">
                                <label for="fecha">Fecha:</label>
                                <input type="text" id="fecha" name="Fecha">
                            </div>

                            <div class="form-group">
                                <label for="nombre">Nombre y Apellidos del Paciente:</label>
                                <input type="text" id="nombre" name="NombrePaciente">
                            </div>

                            <div class="form-group">
                                <label for="identificacion">Identificación del Paciente:</label>
                                <input type="text" id="identificacion" name="IdentificacionPaciente">
                            </div>

                            <div class="form-group">
                                <label for="especialidad">Especialidad:</label>
                                <select id="especialidad" name="Especialidad">
                                    <option value="Especialidad1">Especialidad 1</option>
                                    <option value="Especialidad2">Especialidad 2</option>
                                    <!-- Agrega más opciones según sea necesario -->
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="laboratorio">Laboratorio:</label>
                                <select id="laboratorio" name="Laboratorio">
                                    <option value="Laboratorio1">Laboratorio 1</option>
                                    <option value="Laboratorio2">Laboratorio 2</option>
                                    <!-- Agrega más opciones según sea necesario -->
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="medico">Médico:</label>
                                <select id="medico" name="Medico">
                                    <option value="DrNombreApellido">Dr. Nombre Apellido</option>
                                    <option value="OtroMedico">Dr. Otro Médico</option>
                                    <!-- Agrega más opciones según sea necesario -->
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="precio">Precio por Consulta:</label>
                                <input type="text" id="precio" name="PrecioConsulta">
                            </div>

                            <div class="form-group">
                                <label for="impuesto">Impuesto por Servicio:</label>
                                <input type="text" id="impuesto" name="ImpuestoServicio">
                            </div>

                            <div class="form-group">
                                <label for="iva">IVA:</label>
                                <input type="text" id="iva" name="IVA" readonly>
                            </div>

                            <div class="form-group">
                                <label for="montoFinal">Monto Final:</label>
                                <input type="text" id="montoFinal" name="MontoFinal" readonly>
                            </div>

                            <button type="submit">Generar Factura</button>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>




    @Html.Partial("_Footer")







    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/usermenu/menufunctions.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

