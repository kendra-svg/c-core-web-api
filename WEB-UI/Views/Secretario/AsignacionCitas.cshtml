@{
    Layout = null;
    ViewData["Title"] = "Asignacion Citas";
}





<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/css/usersmenustyle.css" rel="stylesheet" />
    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />
</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Secretario" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>


    <div class="container-fluid">
        <div class="row">
            <!-- Barra lateral -->
            <div class="col-md-3">
                @Html.Partial("MenuLateralSecretario")
            </div>
            <!-- Contenido de la página -->
            <div class="col-md-9">
                <div class="col text-left">
                    <h2>Asignacion de Citas</h2>
                    <div class="row">
                        <div class="col-1 mt-2">
                            <p class="mt-2">Identificacion:</p>
                            <p class="mt-4">Nombre:</p>
                            <p class="mt-4">Apellido:</p>
                        </div>
                        <div class="col-3 mt-2">
                            <input type="text" class="m-2" />
                            <input type="text" class="m-2" />
                            <input type="text" class="m-2" />
                        </div>
                        <div class="col mt-2">
                            <input type="checkbox" />
                            <span>Cita de Emergencia</span>
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-1">
                            <p>Hora:</p>
                        </div>
                        <div class="col-2 ">
                            <input type="time" />
                        </div>
                        <div class="col-2">
                            <p>Tiempo de atencion:</p>
                        </div>
                        <div class="col-2">
                            <input type="text" readonly placeholder="30 minutos" />
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-1">
                            <p>Fecha:</p>
                        </div>
                        <div class="col-2">
                            <input type="date" />
                        </div>
                    </div>

                    <div class="row pt-3">
                        <div class="col-1 ">
                            <label for="especialidad">Especialidad:</label>
                        </div>
                        <div class="col-2">
                            <div>

                                <select name="especialidad">
                                    <option>Medicina General</option>
                                    <option>Cardiologia</option>
                                    <option>Oftamologia</option>
                                </select>
                            </div>

                        </div>
                    </div>
                    <div class="row pt-3">
                        <div class="col-1 ">
                            <label for="medico">Medico:</label>
                        </div>
                        <div class="col-2">

                            <div>

                                <select name="medico">
                                    <option>Dra.Alexa</option>
                                    <option>Dr.Jose</option>
                                    <option>Dra.Maria</option>
                                </select>
                            </div>

                        </div>
                    </div>
                    <div class="row pt-3">
                        <div class="col-1 ">
                            <label for="medico">Sede:</label>
                        </div>
                        <div class="col-2">


                            <div>

                                <select name="medico">
                                    <option>Barva</option>
                                    <option>Cubujuqui</option>
                                    <option>San Rafael</option>
                                </select>
                            </div>

                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col">
                            <p>Notas Medicas:</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <textarea class="textbox-appointment-assignation ">

                        </textarea>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col">
                            <p>Notas de Enfermeria:</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <textarea class="textbox-appointment-assignation ">

                        </textarea>
                        </div>
                    </div>
                    <div class="row pt-3">
                        <div class="col-3">
                            <p>Confirmacion de cita por medio de: </p>

                        </div>
                        <div class="col-1">
                            <input type="checkbox" name="sms">
                            <label for="vehicle1"> SMS</label><br>
                            <input type="checkbox" name="email">
                            <label for="vehicle2"> Email</label><br>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12 d-flex justify-content-center">
                            <button class="btn btn-success" id="btnSave">Guardar</button>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>




   





    

    @Html.Partial("_Footer")






    <script src="~/js/usermenu/menufunctions.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>