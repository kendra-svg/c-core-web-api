@model DTO.Cita

@{
    ViewData["Title"] = "Detalles";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <h1>Detalles</h1>

    <div class="mt-3 text-left">
        <a href="ListaCitas.html" class="btn btn-outline-success me-3">Volver a la lista</a>
        <button id="editarBtn" class="btn btn-outline-success">Editar</button>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Detalles de la Cita</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Fecha:</dt>
                <dd class="col-sm-9">Fecha de la cita</dd>

                <dt class="col-sm-3">Hora de inicio:</dt>
                <dd class="col-sm-9">Hora de inicio de la cita</dd>

                <dt class="col-sm-3">Hora de fin:</dt>
                <dd class="col-sm-9">Hora de fin de la cita</dd>

                <dt class="col-sm-3">Paciente:</dt>
                <dd class="col-sm-9">Nombre del paciente</dd>

                <dt class="col-sm-3">Médico:</dt>
                <dd class="col-sm-9">Nombre del médico</dd>

                <dt class="col-sm-3">Especialidad:</dt>
                <dd class="col-sm-9">Especialidad de la cita</dd>

                <dt class="col-sm-3">Pago de la Cita:</dt>
                <dd class="col-sm-9">Pago de la cita</dd>

                <dt class="col-sm-3">Precio:</dt>
                <dd class="col-sm-9">Precio de la cita</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">Estado de la cita</dd>
            </dl>

        </div>
    </div>
</body>
</html>
