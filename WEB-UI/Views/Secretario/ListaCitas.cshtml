@{
    ViewData["Title"] = "Lista Citas";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <title>Lista de Citas</title>
</head>

<body>
    <div class="text-center mt-3 mx-15">
        <div class="btn-group">
            <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Secretario" asp-action="AsignacionCitas">Crear Cita</a>
        </div>
    </div>

    <h3>Lista de Citas de pacientes</h3>

    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <form class="d-flex w-75">
                <input class="form-control mr-sm-2 flex-grow-1" type="search" placeholder="Nombre paciente" aria-label="Buscar">
                <select class="form-select" name="filtro">
                    <option value="">Todas las citas</option>
                    <option value="hoy">Citas de hoy</option>
                </select>
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
                <div class="input-group mb-3">
                </div>
            </form>
        </div>
    </nav>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Fecha</th>
                <th scope="col">Inicio</th>
                <th scope="col">Fin</th>
                <th scope="col">Paciente</th>
                <th scope="col">Médico</th>
                <th scope="col">Especialidad</th>
                <th scope="col">Pago de la Cita</th>
                <th scope="col">Precio</th>
                <th scope="col">Estado</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody id="citasTableBody">
            <!-- Los datos de las citas se cargarán dinámicamente aquí con JS-->
        </tbody>
    </table>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/ListaCitas/ListaCitas.js"></script>
</body>
</html>
