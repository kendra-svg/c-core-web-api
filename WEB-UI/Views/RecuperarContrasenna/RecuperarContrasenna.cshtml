@model DTO.UsuarioBase

@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/recuperarContrasenna.css" />
    <title>@ViewBag.Title</title>
    <style>
        /* Estilos CSS */
        
    </style>
</head>
<body>
    <div class="main-w3layouts wrapper">
        <h1>Recuperar Contraseña</h1>
        <div class="main-agileinfo">
            <div class="agileits-top">
                <div class="input-group">
                    @Html.TextBoxFor(model => model.Correo, new { @class = "text", placeholder = "Correo Electrónico" })
                </div>
                <p>Ingresa tu correo, y si está en nuestra base de datos, te enviaremos un código de verificación.</p>
                <div class="input-group">
                    <button type="button">Enviar</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
