@{
    Layout = null;
    ViewData["Title"] = "HOME PACIENTE";
   
    
}



<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   @*  <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" /> *@


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
   

    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />
    <link href="~/css/overflowhorizontal.css" rel="stylesheet" />


</head>
<body>

    <header id="header-menu" class="text-white">

        


        <div class="row align-items-center">
            

            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
           
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span>@ViewBag.Email</span>

                <input type="hidden" id="userEmail" value="@ViewBag.Email" />

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0" style="display:none;">
                <li><a asp-controller="Paciente" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>




    @Html.Partial("MenuLateralPaciente")


    <div class="col text-left" id="menu-quick-access">
        <input type="hidden" id="userId" value="@ViewBag.UserId" />

        <h4>Accesos Rápidos</h4>
        <div class="container">
            <div class="row">
                <div class="col boxes-quick-access">
                    <a asp-controller="Paciente" asp-action="ExpedientePersonal" style="color: black">
                        <p class="font-weight-bold fs-5">
                            <img src="https://i.imgur.com/1h4hgpn.png" alt="Expediente" style="max-width: 50px; max-height: 50px;"> Expediente
                        </p>
                    </a>
                </div>
                <div class="col boxes-quick-access">
                    <a asp-controller="Paciente" asp-action="CitasPersonales" style="color: black">
                        <p class="font-weight-bold fs-5">
                            <img src="https://i.imgur.com/qnHMLFP.png" alt="Citas" style="max-width: 50px; max-height: 50px;"> Citas
                        </p>
                    </a>
                </div>
                <div class="col boxes-quick-access">
                    <a asp-controller="Paciente" asp-action="ExamenPersonal" style="color: black">
                        <p class="font-weight-bold fs-5">
                            <img src="https://i.imgur.com/6tK9Xt7.png" alt="Examenes" style="max-width: 50px; max-height: 50px;"> Examenes
                        </p>
                    </a>
                </div>
            </div>
            <div class="row">

                <div class="col boxes-quick-access">
                    <a asp-controller="Paciente" asp-action="EncuestaServicio" style="color: black">
                        <p class="font-weight-bold fs-5">
                            <img src="https://i.imgur.com/vPGdAvL.png" alt="Encuesta servicio" style="max-width: 50px; max-height: 50px;"> Encuesta servicio
                        </p>
                    </a>
                </div>
            </div>
        </div>
    </div>



    @Html.Partial("_Footer")




    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        var userId = document.getElementById('userId').value;
        console.log("ID del usuario:", userId);

        var userEmail = document.getElementById('userEmail').value;
        console.log("Email del usuario:", userEmail);


        sessionStorage.setItem('userEmail', userEmail);
        sessionStorage.setItem('userId', userId);

    </script>

   
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/js/usermenu/menufunctions.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>


