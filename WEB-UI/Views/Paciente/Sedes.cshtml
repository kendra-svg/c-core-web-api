@{
    Layout = null;
    ViewData["Title"] = "Sedes";
}


<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/css/usersmenustyle.css" rel="stylesheet" />
    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-sX1TTHmMzHzMwVBKYXRcKvMKUU9U7pFokvvQfLLpxZ6pezZ+OQHCSd40YcuRZw8PYA2zL14npFgbFglMk6mVow==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
           
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Paciente" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <!-- Barra lateral -->
            <div class="col-md-3">
                @Html.Partial("MenuLateralPaciente")
            </div>
            <!-- Contenido de la página -->
            <div class="col-md-9">
                <div class="col text-left">
                    <h1 class="text-center mt-3">Sedes</h1>
                    <div class="d-flex w-75 mt-4">
                        <input class="form-control mr-sm-2 flex-grow-1" type="search" placeholder="Nombre sede" aria-label="Buscar sede">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
                    </div>
                    <h4 class="text-center mt-3">Lista de sedes</h4>
                    <table class="table" id="sedeTable">
                        <thead class="thead">
                            <tr>
                                <th scope="col">Nombre de la Sede</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Fecha de Creación</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="sedeTableBody">
                            <tr>
                                <td>Sede 1</td>
                                <td>Descripción de la Sede 1</td>
                                <td>01/01/2022</td>
                                <td>
                                    <a href="DetallesSedes" class="btn btn-primary">
                                        <i class="bi bi-eye"></i> Ver detalles
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>Sede 2</td>
                                <td>Descripción de la Sede 2</td>
                                <td>02/01/2022</td>
                                <td>
                                    <a href="DetallesSedes" class="btn btn-primary">
                                        <i class="bi bi-eye"></i> Ver detalles
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>Sede 3</td>
                                <td>Descripción de la Sede 3</td>
                                <td>03/01/2022</td>
                                <td>
                                    <a href="DetallesSedes" class="btn btn-primary">
                                        <i class="bi bi-eye"></i> Ver detalles
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>







    

    @Html.Partial("_Footer")






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/js/usermenu/menufunctions.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


