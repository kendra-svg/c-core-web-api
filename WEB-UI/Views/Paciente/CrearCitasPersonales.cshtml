@{
    Layout = null;
    ViewData["Title"] = "Crear Citas";
}





<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/css/usersmenustyle.css" rel="stylesheet" />
    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />
</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Paciente" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>


    <div class="container-fluid">
        <div class="row">
            <!-- Barra lateral -->
            <div class="col-md-3">
                @Html.Partial("MenuLateralPaciente")
            </div>
            <!-- Contenido de la página -->
            <div class="col-md-9">
                <div class="col text-left">
                    <h2>Crear Citas Personales</h2>
                    <div class="container-fluid">
                        <form id="creacionCita">
                            <div class="row pt-3">
                                <div class="row pt-3">


                                    <div class="col-1 ">
                                        <label for="sedes">Sede:</label>
                                    </div>
                                    <div class="col-3">
                                        <div>

                                            <select id="sedes" class="form-select">
                                            </select>

                                        </div>

                                    </div>
                                </div>


                                <div class="row pt-3">
                                    <div class="col-1 ">
                                        <label for="especialidades">Especialidad:</label>
                                    </div>
                                    <div class="col-3">
                                        <div>
                                            <div>

                                                <select id="especialidades" class="form-select">
                                                </select>

                                            </div>

                                        </div>

                                    </div>
                                </div>

                                <div class="row pt-3">
                                    <div class="col-1 ">
                                        <label for="medicos">Medico:</label>
                                    </div>
                                    <div class="col-3">
                                        <div>
                                            <div>

                                                <select id="medicos" class="form-select">
                                                </select>

                                            </div>

                                        </div>

                                    </div>
                                </div>
                                <div class="row pt-3">
                                    <div class="col-1 ">
                                        <p>Fecha y hora: </p>
                                    </div>
                                    <div class="col-3">
                                        <input type="datetime-local" class="form-control" />
                                    </div>
                                </div>

                                <div class="col-1">
                                    <p>Tiempo de atencion:</p>
                                </div>
                                <div class="col-1">
                                    <input type="text" readonly placeholder="30 minutos" class="form-control" />
                                </div>
                            </div>

                        </form>


                        <div class="row pt-3">
                            <div class="col-3">
                                <p>Confirmacion de cita por medio de: </p>

                            </div>
                            <div class="col-1">
                                <input type="checkbox" name="email" checked disabled>
                                <label for="vehicle2"> Email</label><br>
                            </div>
                        </div>
                        <div class="row pt-3 text-center">
                            <div class="col">
                                <button type="submit" class="btn border" id="btn-buscar">Buscar</button>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col">
                                <div id="grid-posibles-citas" style="height: 300px; width:50%;" class="ag-theme-alpine mt-5"></div>

                            </div>


                        </div>


                    </div>


                </div>

            </div>
        </div>
    </div>






    @Html.Partial("_Footer")







    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/js/usermenu/menufunctions.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


