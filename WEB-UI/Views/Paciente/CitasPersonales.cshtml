@{
    Layout = null;
    ViewData["Title"] = "Citas";
}





<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
   

    <link href="~/css/severalstyles.css" rel="stylesheet" /> <!--para el menu lateral-->
    <link href="~/css/overflow.css" rel="stylesheet" />
</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
           
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Paciente" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>



    <div class="container-fluid">
        <div class="row">
            <!-- Barra lateral -->
            <div class="col-md-3">
                @Html.Partial("MenuLateralPaciente")
            </div>
            <!-- Contenido de la página -->
            <div class="col-md-9">
                <div class="col text-left">

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col">
                                <h2>Citas Personales</h2>
                            </div>

                        </div>
                        <div class="row mt-5">
                            <div class="col-3 ">
                                <input class="form-control me-sm-2" type="search" placeholder="Search">
                            </div>
                            <div class="col text-end">
                                <a asp-controller="Paciente" asp-action="CrearCitasPersonales">
                                    <button class="btn btn-success mt-1">Crear una cita</button>
                                </a>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col">
                                <h5>Su proxima cita sera: </h5>
                            </div>

                        </div>

                        <div class="row mt-4 ">
                            <div class="col-2  text-center align-content-center " id="main-box-appointments">
                                <h2>30 <br /> MARZO</h2>

                            </div>
                            <div class="col-4 " id="other-box-appointments">
                                <p>HOSPITAL SU SALUD PRIMERO</p>
                                <p>08:30PM</p>
                                <p>SABADO 30 DE MARZO 2024</p>
                                <p>RADIOLOGIA</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3 mt-4">
                                <h5>Lista de sus citas</h5>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div id="gridCitasPersonales" style="height: 300px; width:95%;" class="ag-theme-alpine"></div>

                            </div>


                        </div>


                    </div>

                </div>

            </div>
        </div>
    </div>





    @Html.Partial("_Footer")




    


    
   <script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.js"></script>

    <script src="~/js/citas/citaspersonales.js"></script>

    <script src="~/js/usermenu/menufunctions.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


