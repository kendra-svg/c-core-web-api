<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@*     <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" /> *@ 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img style="width: 300px;" class="logo" src="https://i.imgur.com/il4y74l.png" alt="logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                      <ul class="navbar-nav elementos-nav">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="Index"><i></i>Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Landing" asp-action="IndexLanding"><i></i>Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Servicios" asp-action="Servicios"><i></i>Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Contactenos" asp-action="Contactenos"><i></i>Contáctenos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="footer-container">
            <div class="left-section">
                <img style="width: 300px;" class="logoSimepci" src="https://i.imgur.com/WnlMFL0.png" alt="simepci">
            </div>
            <div class="right-section">
                <a class="navbar-brand" asp-area="" asp-controller="Landing" asp-action="LandingEquipo">
                    <img style="width: 80px;" class="logoEquipo" src="https://i.imgur.com/er826Ey.png" alt="logoEquipo">
                </a>
                <div class="powered text-end">
                    <!-- Añadida la clase 'text-end' para alinear a la derecha -->
                    <a class="navbar-brand" asp-area="" asp-controller="Landing" asp-action="LandingEquipo">
                        <p class="text-dark">Powered by <b>Software Unified Sunrise</b></p>
                    </a>
                </div>
            </div>
        </div>
        <div class="menu-section">
            <ul class="footer-menu">
                <li><a asp-area="" asp-controller="Landing" asp-action="IndexLanding"><i></i>Nosotros</a></li>
                <li><a asp-area="" asp-controller="Servicios" asp-action="Servicios"><i></i>Servicios</a></li>
                <li><a asp-area="" asp-controller="Contactenos" asp-action="Contactenos"><i></i>Contáctenos</a></li>
            </ul>
        </div>
        <div class="copyright">
            <p>&copy; 2024. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>