@{
    Layout = null;
    ViewData["Title"] = "Crear Examen";
}





<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!--UNICO CSS PARA PAGINAS CREADAS POR CHRISTIAN -->

    <link href="~/css/severalstyles.css" rel="stylesheet" />

</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Enfermero" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>




    @Html.Partial("MenuLateralEnfermero")

    <div class="col text-left">
        <a asp-controller="Enfermero" asp-action="ExamenPersonal" class="btn btn-outline-success me-3 mt-3">Volver</a>
        <h2 class="mt-5 text-center">Crear un examen</h2>
        <div class="container">

            <form>
                @*  <div class="form-group">
                <label for="especialidad">Especialidad:</label>
                <select class="form-control" id="Especialidad">
                <option>Medicina general</option>
                <option>Cardiología</option>
                <option>Oftamología</option>
                <option>Neumología</option>
                <option>Otorrinolaringolía</option>
                <option>Gastroenteorología</option>
                <option>Laboratorio químico</option>
                <option>Ginecología</option>
                <option>Oncología</option>
                <option>Radiología</option>
                </select>
                </div> *@
                <div class="form-group">
                    <label for="tipoExamen">Tipo de Examen:</label>
                    <select class="form-control" id="input-nombre-examen">
                        <option>Parametros atropmetricos (Medición de talla y peso - Índice de Masa Corporal) </option>
                        <option>Evaluación oftalmológica (agudeza visual - fondo del ojo) </option>
                        <option>Pruebas cardiológicas (Electrocardiograma - ecocardiograma - pruebas ergonométricas para evaluar la salud del corazón)</option>
                        <option>Pruebas pulmonares (radiologia de torax - Espirometría )</option>
                        <option>Analitica completa ( pruebas hepáticas, lipídicas - tiroideas - marcadores tumorales)</option>
                        <option>Audiometría (Prueba para evaluar la capacidad auditiva)</option>
                        <option>Ecografía de abdomen y pelvis (Imágenes de ultrasonido para examinar los órganos internos del abdomen y pelvis)</option>
                        <option>Estudios endoscópicos (Exámenes para visualizar el interior de los órganos)</option>
                        <option>citología con test de Papanicolaou (Examen ginecológico para detectar anomalías celulares en el cuello uterino)</option>
                        <option>Mamografía</option>
                        <option>prueba de deteccion temprana de cancer </option>
                        <option>Examen de heces</option>
                        <option>Estudios endoscópicos</option>

                    </select>
                </div>
                <div class="form-group">
                    <label for="fecha">Fecha:</label>
                    <input type="date" class="form-control" id="input-fecha">
                </div>
                @*  <div class="form-group">
                <label for="centroMedico">Centro Médico:</label>
                <input type="text" class="form-control" id="centroMedico">
                </div> *@
                <div class="form-group">
                    <label for="comentario">Agregar Comentario:</label>
                    <textarea class="form-control" id="input-comentario" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label for="input-foto" class="form-label">Foto del examen</label>

                    <div class="btn-container">
                        <img id="fotoExamen" class="fotoExamen">
                        <button type="button" class="botonGuardar btn btn-outline-success " id="botonFoto" required>Subir foto</button>
                    </div>
                </div>



            </form>
        </div>
        <div class="mt-5 d-flex justify-content-center">
            <button type="submit" class="btn btn-success" id="btnCreateLab">Registrar Examen</button>
        </div>
    </div>
    @Html.Partial("_Footer")


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/laboratorio/createlabpatient.js"></script>


    <script src="~/js/usermenu/menufunctions.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
