@model DTO.UsuarioBase
@{
    ViewBag.Title = "";
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts {

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Login.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <title>@ViewBag.Title</title>
    <style>
        
    </style>
</head>
<body>
    <div class="main-w3layouts wrapper">
        <div class="main-agileinfo">
            <div class="agileits-top">
                <h1>Iniciar Sesión</h1>

                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="input-group">
                        <div>
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "text", placeholder = "Nombre", required = "required" })
                        </div>
                        <div>
                            @Html.PasswordFor(model => model.Contrasenna, new { @class = "text", placeholder = "Contraseña", required = "required" })
                        </div>
                    </div>

                    <div class="btn-container">
                        <input type="submit" value="Iniciar Sesión">
                    </div>
                }

                <div class="signup-link">
                    <p>¿No tienes una cuenta? <a href="#">Regístrate aquí</a></p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
