@{
    Layout = null;
    ViewData["Title"] = "Home Doc";
}





<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!--UNICO CSS PARA PAGINAS CREADAS POR CHRISTIAN -->

    <link href="~/css/severalstyles.css" rel="stylesheet" />

</head>
<body>

    <header id="header-menu" class="text-white">
        <input type="hidden" id="userId" value="@ViewBag.UserId" />
        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
           
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span>@ViewBag.Email</span>

                <input type="hidden" id="userEmail" value="@ViewBag.Email" />

            </div>
        </div>

    </header>
    
    <div class="position-relative">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0" style="display:none;">
                <li><a asp-controller="Doctor" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>




    @Html.Partial("MenuLateralDoctor")


    <div class="col text-left" id="menu-quick-access">
        <h4>Accesos Rápidos</h4>
        <div class="row">
            <div class="col boxes-quick-access">
                <a asp-controller="Doctor" asp-action="CrearRecetas" style="color: black"><p class="font-weight-bold fs-5">Crear Receta</p></a>
            </div>
            <div class="col boxes-quick-access">
                <a asp-controller="Doctor" asp-action="ListaCitas" style="color: black"><p class="font-weight-bold fs-5">Citas de Pacientes</p></a>
            </div>
        </div>
        <div class="row">
            <div class="col boxes-quick-access">
                <a asp-controller="Doctor" asp-action="DatosPersonales" style="color: black"><p class="font-weight-bold fs-5">Datos Personales</p></a>
            </div>
            <div class="col boxes-quick-access">
                <a asp-controller="Doctor" asp-action="Sedes" style="color: black"><p class="font-weight-bold fs-5">Sedes</p></a>
            </div>
            <div class="col boxes-quick-access">
                <a asp-controller="Doctor" asp-action="ExpedientePersonal" style="color: black"><p class="font-weight-bold fs-5">Mi Expediente</p></a>
            </div>
        </div>
    </div>


    @Html.Partial("_Footer")


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        var userId = document.getElementById('userId').value;
        console.log("ID del usuario:", userId);

        var userEmail = document.getElementById('userEmail').value;
        console.log("Email del usuario:", userEmail);


        sessionStorage.setItem('userEmail', userEmail);
        sessionStorage.setItem('userId', userId);

    </script>



    <script src="~/js/usermenu/menufunctions.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

