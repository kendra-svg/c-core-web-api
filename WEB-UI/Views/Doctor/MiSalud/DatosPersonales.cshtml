@{
    Layout = null;
    ViewData["Title"] = "Datos Personales";
}





<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/css/usersmenustyle.css" rel="stylesheet" />
    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Registro.css" />
</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
        
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Doctor" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <!-- Barra lateral -->
            <div class="col-md-3">
                @Html.Partial("MenuLateralDoctor")
            </div>
            <!-- Contenido de la página -->
            <div class="col-md-9">
                <div class="col text-left">
                    <div class="row">
                        <div class="col">
                            <h2>Datos Personales</h2>
                        </div>
                        <div class="btn-container">
                            <img id="fotoUsuario" class="fotoUsuario">
                            
                        </div>
                    </div>
                    <div class="row m-3">
                        <div class="col">
                            <input type="text" id="txt-identificaion" class="form-control" readonly placeholder="ID" />
                        </div>
                    </div>
                    <div class="row m-3">
                        <div class="col">
                            <input type="text" id="txt-nombre" class="form-control" readonly placeholder="Nombre" />
                        </div>
                    </div>
                    <div class="row m-3">
                        <div class="col">
                            <input type="text" id="txt-apellidos" class="form-control" readonly placeholder="Apellidos" />
                        </div>
                    </div>
                    <div class="row m-3">
                        <div class="col">
                            <input type="text" id="txt-telefono" class="form-control" readonly placeholder="Telefono" />
                        </div>
                        <div class="col">
                            <input type="text" id="txt-correo" class="form-control" readonly placeholder="Correo" />
                        </div>
                    </div>
                    <div class="row m-3">
                        <div class="col">
                            <input type="text" id="txt-sexo" class="form-control" readonly placeholder="Sexo" />
                        </div>
                        <div class="col">
                            <input type="text" id="txt-fecha-naciemiento" class="form-control" readonly placeholder="Fecha de Naciemiento" />
                        </div>
                    </div>
                    <div class="row m-3">
                        <div class="col">
                            <input type="text" id="txt-edad" class="form-control" readonly placeholder="Edad" />
                        </div>
                    </div>
                    <div class="row m-3">
                        <p>Direccion</p>
                        <div class="col">
                            <input type="text" id="txt-coodernadas" class="form-control" readonly placeholder="Coordenadas" />
                        </div>

                    </div>


                </div>

            </div>
        </div>
    </div>







    @Html.Partial("_Footer")


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/usuario/getdatospersonales.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/js/usermenu/menufunctions.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


