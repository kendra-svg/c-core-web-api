@{
    Layout = null;
    ViewData["Title"] = "Agenda";
    @model IEnumerable<WEB_UI.Models.Agenda>
}





<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="~/css/agenda.css" />

    <!--UNICO CSS PARA PAGINAS CREADAS POR CHRISTIAN -->

    <link href="~/css/severalstyles.css" rel="stylesheet" />

</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-center">
                <p>Sede a la que pertenece</p>
            </div>
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span>correo@gmail.com </span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Doctor" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a href="#">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>




    @Html.Partial("MenuLateralDoctor")


    <div class="col text-left" >
        <h2>Agenda</h2>

        <div class="botones-container">
            <h3 class="subtitulo">Detalles de las citas</h3>
            <div class="btn-group">
                <a class="btn btn-outline-success" asp-controller="Doctor" asp-action="Reagendar">Fechas para Reagendar </a>
                <a class="btn btn-outline-success" asp-controller="Doctor" asp-action="Crear">Crear Cita</a>
            </div>
        </div>

        <div class="search-container">
            <input type="text" class="search-input" placeholder="Buscar cita por nombre del paciente...">
            <button type="submit" class="search-button">Buscar</button>
        </div>


        <p>Tiene un lapso de 24 horas para poder cancelar la cita del paciente.</p>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nombre del Paciente</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Hora de Inicio</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Sede</th>
                    <th scope="col">Especialidad</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Juan Pérez</td>
                    <td>2024-04-01</td>
                    <td>08:00 AM</td>
                    <td>Consulta Radiología</td>
                    <td>Hospital Central</td>
                    <td>Radiología</td>
                    <td>50.00</td>
                    <td>
                        <button class="btn btn-cancelar" onclick="cancelarCita(1)">Cancelar</button>
                    </td>
                </tr>
                <tr>
                    <td>María González</td>
                    <td>2024-04-01</td>
                    <td>09:00 AM</td>
                    <td>Consulta Radiología</td>
                    <td>Hospital Central</td>
                    <td>Radiología</td>
                    <td>50.00</td>
                    <td>
                        <button class="btn btn-cancelar" onclick="cancelarCita(2)">Cancelar</button>
                    </td>
                </tr>

                @foreach (var cita in Model)
                {
                    <tr>
                        <td>@cita.NombrePaciente</td>
                        <td>@cita.Fecha.ToShortDateString()</td>
                        <td>@cita.HoraInicio</td>
                        <td>@cita.Descripcion</td>
                        <td>@cita.Sede</td>
                        <td>@cita.Especialidad</td>
                        <td>@cita.Precio</td>
                        <td>
                            <button class="btn btn-cancelar" onclick="cancelarCita(@cita.IdCita)">Cancelar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    @Html.Partial("_Footer")



   



    <script src="~/js/usermenu/menufunctions.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
@section Scripts {
    <script>
        function cancelarCita(idCita) {
            // agregar código para cancelar la cita con el idCita
            alert("Se cancelará esta cita);
                                        }
    </script>
}
