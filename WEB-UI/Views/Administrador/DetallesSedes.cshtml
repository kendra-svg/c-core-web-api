@{
    ViewData["Title"] = "Detalles Sedes";
}
<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

    </head>
<body>
    <h1 class="text-center mt-3">Datos de la sede</h1>
    <div class="col text-end m-3 ">
        <button class="btn border">Subir Foto</button>
        <img src="https://i.imgur.com/EOUOikS.png" id="img-profile-personal-data" />
    </div>
    <div class="d-flex justify-content-between">
        <a asp-action="ListaSedes" class="btn btn-outline-success text-success mr-auto" style="text-decoration: none;">Regresar</a>
        <div class="mx-auto">
            <button id="editarBtn" class="btn btn-outline-success">Editar</button>
        </div>
    </div>

    <div class="container mt-3">
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title">Detalles de la Sede</h4>
                <hr />
                <dl class="row">

                    <dt class="col-sm-3">Nombre de la Sede:</dt>
                    <dd class="col-sm-9">Nombre de la Sede</dd>

                    <dt class="col-sm-3">Descripción:</dt>
                    <dd class="col-sm-9">Descripción de la sede</dd>

                    <dt class="col-sm-3">Fecha de Creación:</dt>
                    <dd class="col-sm-9">Fecha de creación de la sede</dd>

                    <dt class="col-sm-3">Provincia:</dt>
                    <dd class="col-sm-9">Provincia de la sede</dd>

                    <dt class="col-sm-3">Cantón:</dt>
                    <dd class="col-sm-9">Cantón de la sede</dd>

                    <dt class="col-sm-3">Distrito:</dt>
                    <dd class="col-sm-9">Distrito de la sede</dd>

                    <dt class="col-sm-3">Otras Señas:</dt>
                    <dd class="col-sm-9">Otras señas de la sede</dd>

                    <dt class="col-sm-3">Ubicación:</dt>
                    <dd class="col-sm-9">Ubicación de la sede</dd>
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profesionales de la Sede</h4>
                <button id="editarBtn" class="btn btn-success"><i class="fas fa-plus"></i> Agregar profesional</button>
                <div class="d-flex justify-content-center">
                    <p>Información genérica sobre profesionales de la sede.</p>
                </div>
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Fecha</th>
                            <th scope="col">Rol</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="citasTableBody">
                        <tr>
                            <td>01/04/2024</td>
                            <td>Médico</td>
                            <td>
                                <button class='btn btn-sm btn-success'><i class='bi bi-pencil'></i></button>
                                <button class='btn btn-sm btn-danger'><i class='bi bi-trash'></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td>02/04/2024</td>
                            <td>Enfermera</td>
                            <td>
                                <button class='btn btn-sm btn-success'><i class='bi bi-pencil'></i></button>
                                <button class='btn btn-sm btn-danger'><i class='bi bi-trash'></i></button>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>