@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/usermenu/menufunctions.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/especialidad/crearespecialidad.js"></script>
    <script src="~/js/especialidad/listarespecialidad.js"></script>
    
    <script src="~/js/especialidad/grid.js"></script>

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Definicion de precios e impuestos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/Diagnosticos.css">
    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />
</head>
<body>

    <header id="header-menu" class="text-white">
        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>
            </div>
        </div>
    </header>

    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Administrador" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a asp-controller="Registro" asp-action="Registro">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>

    @Html.Partial("MenuLateralAdmin")

    <div class="col text-left">
        <h2>Crea una especialidad</h2>
        <form>
            <div class="row mt-3">
                <div class="col-4">
                    <div>
                        <label for="nombre">Nombre De Especialidad</label>
                        <input id="input-nombre-especialidad" type="text" name="nombre" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <div>
                        <label for="costo">Costo</label>
                        <input id="input-costo-especialidad" type="number" name="costo" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <div>
                        <label for="iva">IVA:</label>
                        <input id="input-iva-especialidad" type="number" name="iva" class="form-control" />
                    </div>
                </div>
            </div>
        </form>
        <form>
        <div class="row mt-3">
            <div class="col-4">
                <div>
                    <input id="btn-crear-especialidad" type="submit" class="btn border" value="Guardar" />
                </div>
            </div>
        </div>
        <div class="text-center align-content-center">
            <h6 class="display-6">Lista</h6>

            <div id="myGrid" style="height: 400px; width: 80%;" class="ag-theme-alpine justify-content-center"></div>
        </div>
        <div class="row mt-3">
            <div class="col-4">
                <div>
                    <label for="id">ID</label>
                    <input id="ID" type="text" name="id" class="form-control" readonly />
                </div>
            </div>
        </div>
            <div class="row mt-3">
                <div class="col-4">
                    <div>
                        <label for="Nombre">Nombre</label>
                        <input id="NombreEspecialidad" type="text" name="Nombre" class="form-control" readonly />
                    </div>
                </div>
            </div>
        <div class="row mt-3">
            <div class="col-4">
                <div>
                    <label for="Costo">Costo</label>
                    <input id="Costo" type="text" name="costo" class="form-control"/>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-4">
                <div>
                    <label for="iva">IVA</label>
                    <input id="iva" type="text" name="costo" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-4">
                <div>
                    <input id="btnPUT" type="button" class="btn border" value="Actualizar" />
                </div>
            </div>
        </div>
        </form>
    </div>
</body>
</html>
