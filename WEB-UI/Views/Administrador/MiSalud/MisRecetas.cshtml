@{
    Layout = null;
    ViewData["Title"] = "Mis Recetas";
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/usermenu/menufunctions.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/recetas/crearrecetas.js"></script>
    <script src="~/js/recetas/verreceta.js"></script>
    <script src="~/js/recetas/grid.js"></script>

   @*  <script src="~/js/especialidad/actualizarespecialidad.js"></script> *@
}


<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> 
    @* <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />
</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Administrador" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a <a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>


    <div class="container-fluid">
        <div class="row">
            <!-- Barra lateral -->
            <div class="col-md-3">
                @Html.Partial("MenuLateralAdmin")
            </div>
            <!-- Contenido de la página -->
            <div class="col-md-9">
                <div class="col text-left">
                    <div class="container">
                        <h2 class="text-center">Detalle de Receta</h2>
                        <div class="card">
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="fechaEmision">Fecha de Emisión:</label>
                                    <input type="text" id="fechaEmision" class="form-control" disabled>
                                </div>
                                <div class="mb-3">
                                    <label for="nombreMedicamento">Medicamento:</label>
                                    <input type="text" id="nombreMedicamento" class="form-control" disabled>
                                </div>
                                <div class="mb-3">
                                    <label for="dosisRecomendada">Dosis Recomendada:</label>
                                    <input type="text" id="dosisRecomendada" class="form-control" disabled>
                                </div>
                                <div class="mb-3">
                                    <label for="recomendaciones">Recomendaciones Adicionales:</label>
                                    <textarea id="recomendaciones" class="form-control" disabled></textarea>
                                </div>
                                <div class="mb-3">
                                    <label for="fotoRec">Foto de Receta:</label>
                                    <img id="fotoRec" class="img-fluid" src="https://i.imgur.com/PJokiUz.jpg" alt="Foto de receta">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
            </nav>


    @Html.Partial("_Footer")
</body>
</html>
