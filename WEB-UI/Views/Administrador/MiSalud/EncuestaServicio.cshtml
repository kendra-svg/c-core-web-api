@{
    Layout = null;
    ViewData["Title"] = "Encuesta";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*   <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    @* <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" /> *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />
</head>

<body>
    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>

            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>
    </header>

    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Paciente" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>


    @Html.Partial("MenuLateralAdmin")


    <div class="col text-left">
        <div class="container">
            <h2 class="text-center">Encuesta de servico</h2>
            <form>
                <div class="row mt-2">
                    <div class="col">
                        <p>Nos gustaria saber tu opinion</p>
                    </div>
                </div>
                @* <div class="row mt-3">
                <div class="col-2">
                <label for="nombre-medico">Nombre del médico a evaluar:</label>
                </div>
                <div class="col-4">
                <input type="text" class="form-control" id="nombre-medico" />
                </div>
                </div> *@

                @* INTERES *@
                <div class="row">
                    <div class="col">
                        <label for="InteresGenuino">¿El médico mostró interés genuino en su bienestar y preocupaciones?:</label>
                        <select class="form-select" aria-label="Interés" id="InteresGenuino" name="InteresGenuino">
                            <option selected disabled>Seleccionar</option>
                            <option value="1">Muy Malo</option>
                            <option value="2">Malo</option>
                            <option value="3">Regular</option>
                            <option value="4">Bueno</option>
                            <option value="5">Muy Bueno</option>
                        </select>
                    </div>
                </div>

                @* EXPERIENCIA *@
                <div class="row mt-2">
                    <div class="col">
                        <label for="Experiencia">En general, ¿cómo calificaría su experiencia con este médico?</label>
                        <select class="form-select" aria-label="Experiencia" id="Experiencia" name="Experiencia">
                            <option selected disabled>Seleccionar</option>
                            <option value="1">Muy Malo</option>
                            <option value="2">Malo</option>
                            <option value="3">Regular</option>
                            <option value="4">Bueno</option>
                            <option value="5">Muy Bueno</option>
                        </select>
                    </div>
                </div>

                @* AMABILIDAD CORTESIA *@
                <div class="row mt-2">
                    <div class="col">
                        <label for="AmabilidadCortesia">¿Cómo calificaría la amabilidad y cortesía del médico?</label>
                        <select class="form-select" aria-label="Amabilidad" id="AmabilidadCortesia" name="AmabilidadCortesia">
                            <option selected disabled>Seleccionar</option>
                            <option value="1">Muy Malo</option>
                            <option value="2">Malo</option>
                            <option value="3">Regular</option>
                            <option value="4">Bueno</option>
                            <option value="5">Muy Bueno</option>
                        </select>
                    </div>
                </div>

                @* COMENTARIOS ADICIONALES *@
                <div class="row mt-2">
                    <div class="col">
                        <label for="ComentariosAdicionales">Comentarios adicionales (opcional):</label>
                        <textarea class="form-control" id="ComentariosAdicionales"></textarea>
                    </div>
                </div>

                @* SUBMIT *@

                <div class="form-group mt-4 d-flex justify-content-center">
                    <button id="CreateSurvey" type="button" class="btn btn-success">Enviar</button>
                </div>

            </form>
        </div>
    </div>

    @Html.Partial("_Footer")

    <script src="~/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Encuestas/CrearEncuestas.js"></script>
    <script src="~/js/usermenu/menufunctions.js"></script>


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


