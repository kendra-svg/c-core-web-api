@{
    ViewData["Title"] = "Lista Sedes";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
   </head>
<body>
    <div class="container">
        <h1 class="text-center mt-3">Lista de Sedes</h1>
        <div class="text-center mt-3 mx-15">
            <div class="btn-group">
                <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Administrador" asp-action="CrearSedes">Crear nueva sede</a>
            </div>
        </div>
        <div class="d-flex w-75 mt-4">
            <input class="form-control mr-sm-2 flex-grow-1" type="search" placeholder="Nombre sede" aria-label="Buscar">
        </div>


        <table class="table" id="sedeTable">
            <thead class="thead">
                <tr>
                    <th scope="col">Nombre de la Sede</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Fecha de Creación</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody
                @* id="sedeTableBody"> *@
                <tr>
                    <td>Ejemplo Sede 1</td>
                    <td>Descripción de la sede 1</td>
                    <td>01/04/2024</td>
                    <td>
                        <a asp-action="DetallesSEdes" class='btn btn-sm btn-outline-success'><i class='bi bi-eye'></i></a>
                        <a class='btn btn-sm btn-success'><i class='bi bi-pencil'></i></a>
                        <a class='btn btn-sm btn-danger'><i class='bi bi-trash'></i></a>
                    </td>
                </tr>
                <tr>
                    <td>Ejemplo Sede 2</td>
                    <td>Descripción de la sede 2</td>
                    <td>02/04/2024</td>
                    <td>
                        <a href='' class='btn btn-sm btn-outline-success'><i class='bi bi-eye'></i></a>
                        <button class='btn btn-sm btn-success'><i class='bi bi-pencil'></i></button>
                        <button class='btn btn-sm btn-danger'><i class='bi bi-trash'></i></button>
                    </td>
                </tr>
                <tr>
                    <td>Ejemplo Sede 3</td>
                    <td>Descripción de la sede 3</td>
                    <td>03/04/2024</td>
                    <td>
                        <a href='' class='btn btn-sm btn-outline-success'><i class='bi bi-eye'></i></a>
                        <button class='btn btn-sm btn-success'><i class='bi bi-pencil'></i></button>
                        <button class='btn btn-sm btn-danger'><i class='bi bi-trash'></i></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/ListaSedes/ListaSedes.js"></script>
</body>
</html>

