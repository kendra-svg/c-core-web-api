@model WEB_UI.Models.Sedes

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear sedes</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Foto" class="control-label">Foto</label>
                    <input type="file" id="fotoInput" class="form-control" onchange="previewImage(event)" />
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <img id="imagenPrevia" style="display:none; max-width: 100%; height: auto;" />
                </div>
                <div class="form-group">
                    <label asp-for="NombreSede" class="control-label">Nombre de la Sede</label>
                    <input asp-for="NombreSede" class="form-control" />
                    <span asp-validation-for="NombreSede" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaCreacion" class="control-label">Fecha de Creación</label>
                    <input asp-for="FechaCreacion" type="date" class="form-control" />
                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Provincia" class="control-label">Provincia</label>
                    <input asp-for="Provincia" class="form-control" />
                    <span asp-validation-for="Provincia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Canton" class="control-label">Cantón</label>
                    <input asp-for="Canton" class="form-control" />
                    <span asp-validation-for="Canton" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Distrito" class="control-label">Distrito</label>
                    <input asp-for="Distrito" class="form-control" />
                    <span asp-validation-for="Distrito" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OtrasSeñas" class="control-label">Otras Señas</label>
                    <input asp-for="OtrasSeñas" class="form-control" />
                    <span asp-validation-for="OtrasSeñas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ubicacion" class="control-label">Ubicación</label>
                    <input type="text" id="ubicacion" name="ubicacion" class="form-control" />
                    <button type="button" class="btn btn-primary mt-2" id="verMapa">Ver Mapa</button>
                    <div id="map" class="mt-3" style="width:100%; height:300px; display:none;"></div>
                    <span asp-validation-for="Ubicacion" class="text-danger"></span>
                </div>
                <div class="text-center mt-3 mx-15">
                </div>
                <div class="text-center mt-3 mx-15">
                    <div class="form-group">
                        <input class=" btn btn-outline-success my-2 my-sm-0" type="submit" value="Crear Sede" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-8">
            <a asp-action="Lista" class="btn btn-outline-success">Regresar</a>
        </div>
    </div>

</div>







@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
