@{
    Layout = null;
    ViewData["Title"] = "Resultados de encuestas";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Administrador" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a <a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>



    <div class="container-fluid">
        <div class="row">
            <!-- Barra lateral -->
            <div class="col-md-3">
                @Html.Partial("MenuLateralAdmin")
            </div>
            <!-- Contenido de la página -->
            <div class="col-md-9">
                <div class="col text-left">
                    @*         <div class="text-center align-content-center">
                    <h6 class="display-4">Resultados de encuestas</h6>

                    <div id="myGrid" style="height: 400px; width: 97%;" class="ag-theme-alpine justify-content-center"></div>
                    </div> *@
                    <div class="text-center">
                        <h6 class="display-4 align-content-center"></h6>
                    </div>
                    <div class="col text-left">
                        <div class="container">

                            <div class="text-center align-content-center">
                                <h2 class="display-4">Resultados de encuestas de calidad</h2>
                                <h6 class="mt-5">Los numeros representan 1(muy malo), 2(malo), 3(regular), 4(bueno), 4(muy bueno).</h6>


                                <div id="myGrid" style="height: 400px; width: 97%;" class="ag-theme-alpine justify-content-center"></div>
                            </div>

                            <h6 class="mt-5">Promedio de personas que votan muy bueno para monitorear si han recibido un buen servicio.</h6>
                            <div id="promedioContainer" class="text-center mt-5">
                                <h6 class="display-4">Promedio de Resultados</h6>
                                <div id="promedioInteres" class="mt-3"></div>
                                <div id="promedioExperiencia" class="mt-3"></div>
                                <div id="promedioAmabilidad" class="mt-3"></div>
                            </div>


                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>











    @Html.Partial("_Footer")

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/encuestas/crearencuestas.js"></script>
    <script src="~/js/encuestas/resultadosencuestas.js"></script>
    <script src="~/js/encuestas/grid.js"></script>

    <script src="~/js/usermenu/menufunctions.js"></script>

    

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
