@{
    Layout = null;

}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/agregarfuncionariosasede/griddefinition.js"></script>
    <script src="~/js/agregarfuncionariosasede/agregarfuncionarios.js"></script>

}

<!DOCTYPE html>
<html>
<head>

    <title>Detalles Sedes</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">


    <!--UNICO CSS PARA PAGINAS CREADAS POR CHRISTIAN -->

    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />
    <link href="~/css/agregarfuncionarios.css" rel="stylesheet" />

</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Administrador" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a <a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>


    <div class="container-fluid">
        <div class="row">
            <!-- Barra lateral -->
            <div class="col-md-3">
                @Html.Partial("MenuLateralAdmin")
            </div>
            <!-- Contenido de la página -->
            <div class="col-md-9">
                <div class="col text-left">
                    <h1 class="text-center mt-3">Asignación de usuarios y especialidades a sede</h1>
                    <div class="col text-end m-3 ">
                    </div>

                    <div class="container mt-3">
                        <div class="card mb-3">
                            <div class="card-body">
                                <p class="card-title text-center mt-3">Puede seleccionar una sede, especialidad y funcionario en los menú desplegables inferiores o  hacer doble click en una sede, especialidad o funcionario para elegirlo </p>
                                <div>
                                    <label for="ddlSedes">Sede:</label>
                                    <select id="ddlSedes" class="form-select">
                                    </select>
                                </div>
                                <div>
                                    <label for="ddlEspecialidades">Especialidad:</label>
                                    <select id="ddlEspecialidades" class="form-select text-black">
                                    </select>
                                </div>
                                <div>
                                    <label for="ddlFuncionarios">Funcionario:</label>
                                    <select id="ddlFuncionarios" class="form-select text-black">
                                    </select>
                                </div>
                                <div>
                                    <label for="RolUsuarioLabel">Rol: </label>
                                    <input type="text" id="RolUsuario" class="form-control" readonly: readonly />
                                </div>
                                <div class="text-center">
                                    <button id="btnAgregar" class="btn btn-success mt-3"><i class="fas fa-plus"></i> Asignar a sede</button>
                                </div>


                            </div>
                        </div>

                        <div class="card mb-3">

                            <div class="card-body">
                                <h4 class="card-title text-center mt-3">Lista general de sedes</h4>
                                <p class="card-title text-center mt-3">Puede hacer doble click en una sede para elegirla </p>

                                <div id="sedesGrid" style="height: 430px; width: 1225px;" class="ag-theme-alpine justify-content-center"></div>

                            </div>

                        </div>
                        <div class="card mb-3">

                            <div class="card-body">
                                <h4 class="card-title text-center mt-3">Lista general de especialidades</h4>
                                <p class="card-title text-center mt-3">Puede hacer doble click en una especialidad para elegirla </p>

                                <div id="especGrid" style="height: 430px; width: 1225px;" class="ag-theme-alpine justify-content-center"></div>

                            </div>
                        </div>
                        <div class="card mb-3">

                            <div class="card-body">
                                <h4 class="card-title text-center mt-3">Lista general de funcionarios</h4>
                                <p class="card-subtitle text-center mt-3">Puede hacer doble click en una funcionario para elegirlo</p>

                                <div id="usersGrid" style="height: 430px; width: 1225px;" class="ag-theme-alpine justify-content-center"></div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>


    @Html.Partial("_Footer")


    <script src="~/js/usermenu/menufunctions.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
