@{
    Layout = null;
    ViewData["Title"] = "Buscador de Expedientes";
}





<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!--UNICO CSS PARA PAGINAS CREADAS POR CHRISTIAN -->

    <link href="~/css/severalstyles.css" rel="stylesheet" />
   

</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-center">
                <p>Sede a la que pertenece</p>
            </div>
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span>correo@gmail.com </span>

            </div>
        </div>

    </header>
    <div class="position-relative">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0" style="display:none;">
                <li><a asp-controller="Administrador" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a href="#">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>







    @Html.Partial("MenuLateralAdmin")
    <div class="col text-left">
        <h2 class="mt-3">Buscador de Expedientes</h2>
        <div class="row mt-3">
            <div class="col-4">
                <input type="text" placeholder="ID / NOMBRE" class="form-control" />
            </div>
        </div>

        <div class="row mt-5">
            <div class="col">
                <h5>Resultado de Expediente: </h5>
            </div>
            <div class="col">
                <button class="btn border">Editar</button>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-2">
                <img src="https://i.imgur.com/6hfDzu7.png" />
            </div>
            <div class="col">
                <h4>Nombre Paciente</h4>
                <p>paciente@gmail.com</p>
            </div>
        </div>
        <h3 class="mt-5">Datos Generales</h3>
        <div class="container mt-3 ">
            <div class="row border">
                <div class="col-2">
                    <h5>Identificacion: </h5>
                </div>
                <div class="col-3">
                    <p>Content</p>
                </div>
            </div>
            <div class="row border">
                <div class="col-2">
                    <h5>Sexo: </h5>
                </div>
                <div class="col-3">
                    <p>Content</p>
                </div>
            </div>
            <div class="row border">
                <div class="col-2">
                    <h5>Telefono: </h5>
                </div>
                <div class="col-3">
                    <p>Content</p>
                </div>
            </div>
            <div class="row border">
                <div class="col-2">
                    <h5>Edad: </h5>
                </div>
                <div class="col-3">
                    <p>Content</p>
                </div>
            </div>
            <div class="row border">
                <div class="col-2">
                    <h5>Direccion: </h5>
                </div>
                <div class="col-3">
                    <p>Content</p>
                </div>
            </div>
        </div>
        <h3 class="mt-3">Historial Clinico</h3>
        <div class="container mt-3">
            <div class="form-control">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="col-2">Historial</th>
                            <th class="col-1">Si</th>
                            <th class="col-1">No</th>
                            <th class="col">Cuales</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Antecedentes Personales</td>
                            <td><input type="radio" name="antecedentePersonales" /></td>
                            <td><input type="radio" name="antecedentePersonales" /></td>
                            <td>Content</td>
                        </tr>
                        <tr>
                            <td>Tratamientos Farmacologicos</td>
                            <td><input type="radio" name="tratamientos" /></td>
                            <td><input type="radio" name="tratamientos" /></td>
                            <td>Content</td>
                        </tr>
                        <tr>
                            <td>Antecedentes Familiares</td>
                            <td><input type="radio" name="antecedentes" /></td>
                            <td><input type="radio" name="antecedentes" /></td>
                            <td>Content</td>
                        </tr>
                        <tr>
                            <td>Enfermedades Cronicas</td>
                            <td><input type="radio" name="cronicas" /></td>
                            <td><input type="radio" name="cronicas" /></td>
                            <td>Content</td>
                        </tr>
                        <tr>
                            <td>Habitos no saludables</td>
                            <td><input type="radio" name="habitos" /></td>
                            <td><input type="radio" name="habitos" /></td>
                            <td>Content</td>
                        </tr>
                        <tr>
                            <td>Factores de riesgo cardiovasculares</td>
                            <td><input type="radio" name="cardiovascular" /></td>
                            <td><input type="radio" name="cardiovascular" /></td>
                            <td>Content</td>
                        </tr>
                        <tr>
                            <td>Diabetes</td>
                            <td><input type="radio" name="diabetes" /></td>
                            <td><input type="radio" name="diabetes" /></td>
                            <td>Content</td>
                        </tr>
                        <tr>
                            <td>Enfermedades Congenitas</td>
                            <td><input type="radio" name="congenitas" /></td>
                            <td><input type="radio" name="congenitas" /></td>
                            <td>Content</td>
                        </tr>
                        <tr>
                            <td>Cancer</td>
                            <td><input type="radio" name="cancer" /></td>
                            <td><input type="radio" name="cancer" /></td>
                            <td>Content</td>
                        </tr>
                    </tbody>
                </table>


            </div>
        </div>
        <h3 class="mt-3">Mas Información</h3>
        <div class="container" id="btns-expediente">
            <div class="row">
                <div class="col-4 m-1">
                    <a asp-controller="Administrador" asp-action="">
                        <button class="btn border">Citas</button>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-4 m-1">
                    <a asp-controller="Administrador" asp-action="">
                        <button class="btn border">Examenes</button>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-4 m-1">
                    <a asp-controller="Administrador" asp-action="RecetasPacientes">
                        <button class="btn border">Recetas</button>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-4 m-1">
                    <a asp-controller="Administrador" asp-action="">
                        <button class="btn border">Diagnosticos Medicos</button>
                    </a>
                </div>
            </div>


        </div>
        <div class="row m-5">
            <div class="col-5">
                <button class="btn border " type="submit">GUARDAR</button>
            </div>
        </div>


    </div>

    

    @Html.Partial("_Footer")






    <script src="~/js/usermenu/menufunctions.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
