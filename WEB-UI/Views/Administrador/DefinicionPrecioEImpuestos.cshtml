@{
    Layout = null;
    ViewData["Title"] = "Definicion de precios e impuestos";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Definicion de precios e impuestos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/Diagnosticos.css">
    <link href="~/css/severalstyles.css" rel="stylesheet" />
    <link href="~/css/overflow.css" rel="stylesheet" />
</head>
<body onload="print_especialidad('combobox1')">

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span id="user-email-display"></span>

            </div>
        </div>

    </header>
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Administrador" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a <a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <!-- Barra lateral -->
            <div class="col-md-3">
                @Html.Partial("MenuLateralAdmin")
            </div>
            <!-- Contenido de la página -->
            <div class="col-md-9">
                <div class="col text-left">
                    <div class="container">
                        <h2>Definicion de Precios e Impuestos</h2>
                        <form>
                            <div class="mb-3">
                                <div>
                                    <label for="especialidad">Seleccione la especialidad:</label>
                                    <select name="especialidad" class="form-control" id="combobox1" onchange="print_Precio('combobox2', this.selectedIndex)"></select>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div>
                                    <label for="precio">Precio por consulta:</label>
                                    <select name="precio" class="form-control" id="combobox2" onchange="print_impuesto('combobox3', this.value)"></select>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div>
                                    <label for="impuesto">Impuesto por servicio:</label>
                                    <select name="impuesto" class="form-control" id="combobox3"></select>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div>
                                    <label for="iva">IVA:</label>
                                    <select name="iva" class="form-control" disabled>
                                        <option value="13">13%</option>
                                    </select>
                                </div>
                            </div>
                        </form>

                        <div class="row mt-3">
                            <div class="col-4 mx-auto">
                                <div class="text-center">
                                    <input type="submit" class="btn btn-success border" value="Guardar" />
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>




        
    @Html.Partial("_Footer")

    <script src="~/js/usermenu/menufunctions.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/precioseimpuestos/precioseimpuestos.js"></script>

    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
</body>
</html>
