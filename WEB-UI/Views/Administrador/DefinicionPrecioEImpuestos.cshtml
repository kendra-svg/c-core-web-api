@{
    Layout = null;
    ViewData["Title"] = "Definicion de precios e impuestos";
}





<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/css/usersmenustyle.css" rel="stylesheet" />
    <link href="~/css/severalstyles.css" rel="stylesheet" />

</head>
<body>

    <header id="header-menu" class="text-white">
        <div class="row align-items-center">
            <div class="col">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-center">
                <p>Sede a la que pertenece</p>
            </div>
            <div class="col text-end m-1" id="other-options">
                <i class="bi bi-person"></i>
                <span>correo@gmail.com</span>

            </div>
        </div>
    </header>
    <div class="position-relative">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0" style="display:none;">
                <li><a href="#">Mi perfil</a></li>
                <li><a href="#">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>







    @Html.Partial("MenuLateralAdmin")

    <div class="col text-left" >
        <h2>Definicion de Precios e Impuestos</h2>
        <form>
            <div class="row">
                <div class="col-4">
                    <div>
                        <label for="especialidad">Seleccione la especialidad:</label>
                        <select name="especialidad" class="form-control ">
                            <option>Medicina General</option>
                            <option>Cardiologia</option>
                            <option>Oftamologia</option>
                        </select>
                    </div>

                </div>

            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <div>
                        <label for="precio">Precio por consulta:</label>
                        <input type="number" name="precio" class="form-control" />
                    </div>

                </div>

            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <div>
                        <label for="impuesto">Impuesto por servicio:</label>
                        <input type="number" name="impuesto" class="form-control" />
                    </div>

                </div>

            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <div>
                        <label for="impuesto">IVA:</label>
                        <input type="number" name="iva" class="form-control" />
                    </div>

                </div>

            </div>
        </form>
        <div class="row mt-3">
            <div class="col-4">
                <div>
                    <input type="submit" class="btn border" value="Guardar" />
                </div>

            </div>

        </div>

    </div>

    

    @Html.Partial("_Footer")






    <script src="~/js/usermenu/menufunctions.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
