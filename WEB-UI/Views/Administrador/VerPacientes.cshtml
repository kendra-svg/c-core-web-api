@{
    ViewBag.Title = "Ver Pacientes";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row align-items-center justify-content-between mb-4">
            <div class="col-md-3 mt-1">
                <p class="ml-2">Buscar Usuario</p>
            </div>
            <div class="col-md-9">
                <form class="d-flex" action="/buscar" method="GET">
                    <input class="form-control me-2 flex-grow-1" type="text" name="q" placeholder="Buscar...">
                    <button class="btn btn-outline-success mx-20" type="submit">Buscar</button>
                </form>
            </div>
        </div>
        <div class="container mt-2">
            <div class="col-md-6">
                <h2>Datos del usuario</h2>
                <img src="https://via.placeholder.com/150" class="img-fluid mt-3 mb-1" alt="Imagen">
                <button class="btn btn-success d-block mt-1 ml-3">Subir archivo</button>
            </div>

        </div>


    </div>



    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
