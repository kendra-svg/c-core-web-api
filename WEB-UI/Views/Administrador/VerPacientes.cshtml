@{
    Layout = null;
    ViewBag.Title = "Ver Pacientes";
}


<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />


   


    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!--UNICO CSS PARA PAGINAS CREADAS POR CHRISTIAN -->

    <link href="~/css/severalstyles.css" rel="stylesheet" />

</head>
<body>

    <header id="header-menu" class="text-white">

        <div class="row align-items-center">
            <div class="col text-left">
                <img src="https://i.imgur.com/JisFGwG.png" id="img-logo-nav-bar" />
            </div>
            <div class="col text-center">
                <p>Sede a la que pertenece</p>
            </div>
            <div class="col text-end p-5" id="other-options">
                <i class="bi bi-person"></i>
                <span>correo@gmail.com </span>

            </div>
        </div>

    </header>
    <
    <div class="position-relative ">
        <div class="container">
            <ul id="other-options-list" class="list-unstyled position-absolute end-0 " style="display:none;">
                <li><a asp-controller="Administrador" asp-action="DatosPersonales">Mi perfil</a></li>
                <li><a <a asp-controller="Registro" asp-action="Registro">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>





    @Html.Partial("MenuLateralAdmin")

    <div class="col text-left" id="menu-quick-access">
        <div class="row align-items-center justify-content-between mt-3 mb-4">
            <div class="col-md-3 mt-3">
                <p class="ml-1">Buscar Usuario</p>
            </div>
            <div class="col-md-9">
                <form class="d-flex mr-4" action="/buscar" method="GET">
                    <input class="form-control me-2 flex-grow-1" type="text" name="q" placeholder="Buscar...">
                    <button class="btn btn-outline-success " type="submit">Buscar</button>
                </form>
            </div>
        </div>

        <div class="container">
            <div class="row mb-3">
                <div class="col-md-12">
                    <button class="btn btn-success mb-2">Nuevo Usuario</button>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Correo</th>
                                <th>Nombre</th>
                                <th>Rol</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>usuario1@example.com</td>
                                <td>Usuario Uno</td>
                                <td>Doctor</td>
                                <td>Activo</td>
                                <td>
                                    <button type="button" class="btn btn-primary btn-sm"><i class="bi bi-eye"></i></button>
                                    <button type="button" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary" onclick="window.location.href='BuscadorExpedientes'">Ver expediente</button>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>usuario2@example.com</td>
                                <td>Usuario Dos</td>
                                <td>Enfermero</td>
                                <td>Inactivo</td>
                                <td>
                                    <button type="button" class="btn btn-primary btn-sm"><i class="bi bi-eye"></i></button>
                                    <button type="button" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary" onclick="window.location.href='BuscadorExpedientes'">Ver expediente</button>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>

    @Html.Partial("_Footer")

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js">




    <script src="~/js/usermenu/menufunctions.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
